        "default": "automatic",
        "options": [
          {"value": "automatic", "label": "Automatic"},
          {"value": "h1", "label": "H1"},
          {"value": "h2", "label": "H2"},
          {"value": "h3", "label": "H3"},
          {"value": "h4", "label": "H4"},
          {"value": "h5", "label": "H5"},
          {"value": "h6", "label": "H6"}
        ]
      }
    ],
    "blocks": [
      {
        "type": "highlight",
        "name": "Highlight",
        "settings": [
          {
            "type": "header",
            "content": "Content"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
