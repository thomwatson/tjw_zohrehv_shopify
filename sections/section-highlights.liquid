          { "value": "rectangle", "label": "Rectangle" },
          { "value": "circle", "label": "Circle" },
          { "value": "button", "label": "Button" }
        ],
        "default": "rectangle"
      },
      {
        "type":    "range",
        "id":      "grid",
        "min":     3,
        "max":     8,
        "step":    1,
        "label":   "Highlights per row",
        "default": 6
      },
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Highlights"
      },
      {
        "type": "select",
        "id": "heading_position",
        "label": "Heading alignment",
